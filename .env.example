# ============================================
# 2Bored2Tolerate Configuration
# ============================================
# Copy this file to .env and fill in your values
# All values shown are defaults (can be omitted if unchanged)

# === Minecraft Account ===
MC_EMAIL=your@email.com
MC_AUTH_TYPE=microsoft
# Minecraft protocol version (2b2t currently uses 1.21.4)
MC_VERSION=1.21.4
# Where to store auth tokens (relative or absolute path)
AUTH_PROFILES_FOLDER=./data/auth

# === Target Server ===
SERVER_HOST=2b2t.org
SERVER_PORT=25565

# === Proxy Server (what you connect to in Minecraft) ===
PROXY_PORT=25565
PROXY_BIND=0.0.0.0
PROXY_ONLINE_MODE=true
PROXY_WHITELIST=false
PROXY_OFFLINE_USERNAME=Player

# === Web Dashboard ===
WEB_PORT=8080
WEB_BIND=0.0.0.0
WEB_PASSWORD=
OPEN_BROWSER=false

# === Discord Bot (optional) ===
DISCORD_ENABLED=false
DISCORD_TOKEN=
DISCORD_CHAT=true
DISCORD_NOTIFY=false
DISCORD_NOTIFY_POSITION=20

# === Anti-AFK (keeps you in-game after queue finishes) ===
ANTIAFK_ENABLED=true
ANTIAFK_WALK=true
ANTIAFK_LOOK=true
ANTIAFK_JUMP=true
ANTIAFK_SWING=true
ANTIAFK_SNEAK=true
ANTIAFK_INTERVAL=15000

# === Desktop Notifications ===
DESKTOP_NOTIFY=true
DESKTOP_NOTIFY_POSITION=20

# === Behavior ===
JOIN_ON_START=false
RECONNECT_ON_ERROR=true
RESTART_QUEUE=false
LOG_ENABLED=true
EXPAND_QUEUE_DATA=false
SHOW_USERNAME_STATUS=true
FAVICON=
